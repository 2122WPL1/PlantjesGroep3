            <pages:UserControlAppearance/>
        </DataTemplate>

    </Window.Resources>

    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="10" Width="1221">

            <Button x:Name="btnAdd" Content="Toevoegen" Width="100" Margin="5" 
                    Command="{Binding mainNavigationCommand}" 
                    CommandParameter="VIEWADD"/>

            <Button x:Name="btnBloei" Content="Bloei" Width="100" Margin="5" 
                    Command="{Binding mainNavigationCommand}" 
                    CommandParameter="VIEWBLOOM"/>

            <Button x:Name="btnVerzorging" Content="Verzorging" Width="100" Margin="5"
                    Command="{Binding mainNavigationCommand}"
                    CommandParameter="VIEWGROOMING"/>

            <Button x:Name="btnGroei" Content="Groei" Width="100" Margin="5"
                    Command="{Binding mainNavigationCommand}"
                    CommandParameter="VIEWGROW"/>

            <Button x:Name="btnUiterlijk" Content="Uiterlijk" Width="100" Margin="5"     
                    Command="{Binding mainNavigationCommand}"
                    CommandParameter="VIEWAPPEARANCE"/>

            <Button x:Name="btnHabitat" Content="Habitat" Width="100" Margin="5"    
                    Command="{Binding mainNavigationCommand}"
                    CommandParameter="VIEWHABITAT"/>

            <Button x:Name="btnNaam" Content="Naam" Width="100" Margin="5" 
                    Command="{Binding mainNavigationCommand}"
                    CommandParameter="VIEWNAME"/>
            <Button x:Name="btnDocent" Content="Docent" Width="100" 
                    Command="{Binding mainNavigationCommand}"
                    CommandParameter="VIEWDOCENT" HorizontalAlignment="Stretch" Margin="350,0,0,0"/>
        </StackPanel>

        <Grid x:Name="MainContent">
            <ContentControl Content="{Binding currentViewModel}"/>
        </Grid>
    </DockPanel>

