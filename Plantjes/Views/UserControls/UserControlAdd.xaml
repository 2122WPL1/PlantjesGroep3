<UserControl x:Class="Plantjes.Views.UserControls.UserControlAdd"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Plantjes.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="834" d:DesignWidth="1250">

    <!-- Written by Ian on 25/02 -->
    <Grid Background="#eeeeee">
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Orientation="Horizontal" Margin="10">

            <Button x:Name="btnMainInfo" Content="Algemene Info" Width="100" Margin="5"/>

            <Button x:Name="btnFenotype" Content="Fenotype" Width="100" Margin="5"/>

            <Button x:Name="btnAbioFactors" Content="Abiotische Factoren" Width="120" Margin="5"/>

            <Button x:Name="btnActs" Content="Beheersdaden" Width="100" Margin="5"/>

            <Button x:Name="btnCommensalism" Content="Commensalisme" Width="100" Margin="5"/>
        </StackPanel>


        <!--#region Maininfo -->
        <GroupBox x:Name="gbMainInfo" Margin="0,50,0,0" Visibility="Collapsed">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Orientation="Vertical">

                    <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
                        <Label x:Name="lblType" Content="Type:"/>
                        <ComboBox x:Name="cbType" Width="200"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
                        <Label x:Name="lblFamilie" Content="Familie:"/>
                        <TextBox x:Name="txtFamilie" Width="200"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
                        <Label x:Name="lblGeslacht" Content="Geslacht:"/>
                        <TextBox x:Name="txtGeslacht" Width="200"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
                        <Label x:Name="lblSoort" Content="Soort:"/>
                        <TextBox x:Name="txtSoort" Width="200"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
                        <Label x:Name="lblVariant" Content="Variant:"/>
                        <TextBox x:Name="txtVariant" Width="200"/>
                    </StackPanel>
                    
                </StackPanel>
                <StackPanel Orientation="Vertical" Margin="0,40,0,0">
                    
                    <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
                        <Label x:Name="lblFotoBloei" Content="Bloei Foto:"/>
                        <Button x:Name="btnFotoBloei" Content="Bladeren..." Width="200"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
                        <Label x:Name="lblFotoHabitus" Content="Habitus Foto:"/>
                        <Button x:Name="btnFotoHabitus" Content="Bladeren..." Width="200"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
                        <Label x:Name="lblFotoBlad" Content="Blad Foto:"/>
                        <Button x:Name="btnFotoBlad" Content="Bladeren..." Width="200"/>
                    </StackPanel>

                </StackPanel>
            </StackPanel>
        </GroupBox>


        <!--#region fenotype -->
        <GroupBox x:Name="gbFenotype" Margin="0,50,0,0" Visibility="Visible">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Orientation="Vertical">
                    <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
                            <Label x:Name="lblBladVorm" Content="Bladvorm:"/>
                            <TextBox x:Name="txtBladVorm" Width="200"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
                            <Label x:Name="lblBloeiBladRatio" Content="Ratio Bloed/Blad:"/>
                            <TextBox x:Name="txtBloeiBladRatio" Width="200"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
                            <Label x:Name="lblBloeiwijze" Content="Bloeiwijze:"/>
                            <ComboBox x:Name="cbBloeiwijze" Width="200"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
                            <Label x:Name="lblHabitus" Content="Habitus:"/>
                            <ComboBox x:Name="cbHabitus" Width="200"/>
                        </StackPanel>


                    </WrapPanel>
                    <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center">

                        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
                            <Label x:Name="lblMinBloeihoogte" Content="Bloeihoogte Min:"/>
                            <TextBox x:Name="txtMinBloeihoogte" Width="200"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
                            <Label x:Name="lblMaxBloeihoogte" Content="Bloeihoogte Max:"/>
                            <TextBox x:Name="txtMaxBloeihoogte" Width="200"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
                            <Label x:Name="lblSpruitfenologie" Content="Spruitfenologie:"/>
                            <TextBox x:Name="txtSpruitfenologie" Width="200"/>
                        </StackPanel>
                    </WrapPanel>
                    <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
                            <Label x:Name="lblBladkleur" Content="Bladkleur:"/>
                            <ComboBox x:Name="cbBladkleur" Width="200"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
                            <Label x:Name="lblBloeikleur" Content="Bloeikleur:"/>
                            <ComboBox x:Name="cbBloeikleur" Width="200"/>
                        </StackPanel>
                    </WrapPanel>
                    <Rectangle Fill="#888888" Height="1" Margin="0,10,0,10"/>
                    <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
                            <Label x:Name="lblMaand" Content="Maand:"/>
                            <ComboBox x:Name="cbMaand" Width="200"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
                            <Label x:Name="lblBladGrootte" Content="Bladgrootte tot:"/>
                            <TextBox x:Name="txtBladGrootte" Width="200"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
                            <Label x:Name="lblMaxBladhoogte" Content="Bladhoogte Max:"/>
                            <TextBox x:Name="txtMaxBladhoogte" Width="200"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
                            <Label x:Name="lblBloeit" Content="Bloeit:"/>
                            <CheckBox x:Name="txtBloeit" Margin="0,5"/>
                        </StackPanel>
                    </WrapPanel>
                    <Button x:Name="btnAddMonthFenotype" Content="+" Width="20"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>


        <!--#region Abiofactors -->    
        <GroupBox x:Name="gbAbioFactors" Margin="0,50,0,0" Visibility="Collapsed">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Orientation="Vertical">
                    
                    <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
                        <Label x:Name="lblBezonning" Content="Bezonning:"/>
                        <ComboBox x:Name="cbBezonning" Width="200"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
                        <Label x:Name="lblGrondsoort" Content="Grondsoort:"/>
                        <ComboBox x:Name="cbGrondsoort" Width="200"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
                        <Label x:Name="lblVochtbehoefte" Content="Vochtbehoefte:"/>
                        <ComboBox x:Name="cbVochtbehoefte" Width="200"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
                        <Label x:Name="lblVoedingsbehoefte" Content="Voedingsbehoefte:"/>
                        <ComboBox x:Name="cbVoedingsbehoefte" Width="200"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
                        <Label x:Name="lblHabitat" Content="Habitat:"/>
                        <ComboBox x:Name="cbHabitat" Width="200"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- Button met algemene afhandeling van toevoegingscode. -->
        <!-- Note: Algemene Info moet verplicht ingevuld zijn,
                    anders wordt plant niet toegevoegd -->
        <Button Content="Toevoegen" Width="150" Height="50" Margin="0, 0, 100, 100" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
    </Grid>
</UserControl>
