<UserControl x:Class="Plantjes.Views.UserControls.UserControlSearch"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Plantjes.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="834" d:DesignWidth="1250">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top">
                <StackPanel Orientation="Horizontal" Margin="10,0,10,0">
                    <Label x:Name="lblNaam" Content="Naam:"/>
                    <TextBox x:Name="txtNaam" Width="200"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="10,0,10,0">
                    <Label x:Name="lblGrondsoort" Content="Grondsoort:"/>
                    <ComboBox x:Name="cbGrondsoort" Width="200"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="10,0,10,0">
                    <Label x:Name="lblHabitat" Content="Habitat:"/>
                    <ComboBox x:Name="cbHabitat" Width="200"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="10,0,10,0">
                    <Label x:Name="lblHabitus" Content="Habitus:"/>
                    <ComboBox x:Name="cbHabitus" Width="200"/>
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Label x:Name="lblSociabiliteit" Content="Sociabiliteit:"  VerticalAlignment="Center"/>
                    <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" Width="20">
                        <CheckBox x:Name="chbSocI"/>
                        <Label Content="I"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" Width="20">
                        <CheckBox x:Name="chbSocII"/>
                        <Label Content="II"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" Width="20">
                        <CheckBox x:Name="chbSocIII"/>
                        <Label Content="III"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" Width="20">
                        <CheckBox x:Name="chbSocIV"/>
                        <Label Content="IV"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" Width="20">
                        <CheckBox x:Name="chbSocV"/>
                        <Label Content="V"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="10,0,10,0" VerticalAlignment="Center">
                    <Label x:Name="lbl" Content="Bezonning:"/>
                    <ComboBox x:Name="cb" Width="200" Height="25"/>
                </StackPanel>
                <Button Width="200" Content="Zoeken" x:Name="btnZoeken" Margin="10,0,10,0" VerticalAlignment="Center" Height="25"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
