<UserControl x:Class="Plantjes.Views.UserControls.UserControlPlantDetail"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Plantjes.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Margin="250,0,250,180" VerticalAlignment="Stretch">
            <Label FontWeight="Bold" HorizontalContentAlignment="Center" Content="{Binding PlantNaam}"/>
            <Image Height="107" Width="216"/>
            <Label HorizontalContentAlignment="Center" Content="{Binding Plant.Type}" Width="200"/>
            <Label HorizontalContentAlignment="Center" Content="{Binding Plant.Familie}" Width="200"/>
            <Label HorizontalContentAlignment="Center" Content="{Binding Plant.Geslacht}" Width="200"/>
            <Label HorizontalContentAlignment="Center" Content="{Binding Plant.Soort}" Width="200"/>
        </StackPanel>
    </Grid>
</UserControl>
